{
    "name": "aiida-abinit",
    "author": "Samuel Ponce",
    "author_email": "samuel.pon@gmail.com",
    "description": "The AiiDA plugin for ABINIT.",
    "url": "https://github.com/sponce24/aiida-abinit",
    "license": "MIT",
    "classifiers": [
        "Programming Language :: Python",
        "Intended Audience :: Science/Research",
        "License :: OSI Approved :: MIT License",
        "Natural Language :: English",
        "Framework :: AiiDA"
    ],
    "version": "0.2.0a1",
    "entry_points": {
        "aiida.calculations": [
            "abinit = aiida_abinit.calculations:AbinitCalculation"
        ],
        "aiida.parsers": [
            "abinit = aiida_abinit.parsers:AbinitParser"
        ],
	    "aiida.workflows": [
	        "abinit.base = aiida_abinit.workflows.base:AbinitBaseWorkChain"
	    ]
    },
    "setup_requires": ["reentry"],
    "install_requires": [
        "aiida_core[atomic_tools]>=1.4.4,<=2.0.0",
        "aiida-pseudo~=0.6.1",
        "abipy>=0.9.0",
        "packaging",
        "numpy",
        "importlib_resources"
    ],
    "extras_require": {
        "tests": [
            "pgtest~=1.3",
            "pytest~=6.0",
            "pytest-regressions~=1.0"
        ],
        "pre-commit": [
            "pre-commit~=2.2",
            "pylint==2.6.0"
        ],
        "docs": [
            "sphinx",
            "docutils",
            "sphinx-copybutton~=0.3.0",
            "sphinx-book-theme~=0.1.0",
            "sphinx-click~=2.7.1"
        ]
    }
}
